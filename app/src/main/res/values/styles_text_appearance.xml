<resources>
    <style name="CommonTitleStyle">
        <item name="android:textColor">@color/common_content_text_color</item>
        <item name="android:textSize">@dimen/common_title_text_size</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="CommonSubtitleStyle">
        <item name="android:textColor">@color/common_content_text_color</item>
        <item name="android:textSize">@dimen/common_subtitle_text_size</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="CommonSubSubtitleStyle">
        <item name="android:textColor">@color/common_secondary_context_text_color</item>
        <item name="android:textSize">@dimen/common_subsubtitle_text_size</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="CommonPrimaryContextTextStyle">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/common_primary_context_text_color</item>
        <item name="android:textSize">@dimen/common_context_text_size</item>
    </style>

    <style name="CommonSecondaryContextTextStyle" parent="CommonPrimaryContextTextStyle">
        <item name="android:textColor">@color/common_secondary_context_text_color</item>
        <item name="android:textSize">@dimen/common_context_text_size</item>
    </style>

    <style name="CommonLabelTextStyle" parent="CommonPrimaryContextTextStyle">
        <item name="android:textColor">@color/common_secondary_context_text_color</item>
        <item name="android:textSize">@dimen/common_label_text_size</item>
    </style>

    <style name="zooSectionTitleStyle" parent="CommonTitleStyle">
        <item name="android:textSize">18sp</item>
    </style>


    <style name="toolbarCollapsedTitleTextAppearance" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/common_secondary_context_text_color</item>
    </style>

</resources>